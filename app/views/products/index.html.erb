<%= link_to 'Create', new_product_path %>
<table>
    <tr>
        <th>title</th>
        <th>price</th>
        <th>category</th>
        <th>edit</th>
        <th>delete</th>
    </tr>
    <% @products.each do |product| %>
    <tr>
      <td><%= link_to product.title, product_path(product) %></td>
      <td><%= product.price %></td>
      <td><%= product.category.title %></td>
      <td><%= link_to 'edit', edit_product_path(product) %></td>
      <td><%= link_to 'Delete', product_path(product), method: :delete,
      data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
</table>
